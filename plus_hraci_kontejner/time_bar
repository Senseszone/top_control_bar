<!-- ui/ProgressPill.vue
Jednoduchá komponenta pro procenta dokončení (Play progress).
-->
<template>
  <div class="pill">
    <div class="label">{{ label }}</div>
    <div class="track">
      <div class="fill" :style="{ width: `${clamped}%` }"></div>
    </div>
    <div class="pct">{{ clamped }}%</div>
  </div>
</template>

<script setup lang="ts">
import { computed } from "vue";

const props = defineProps<{
  label: string;
  value: number;
}>();

const clamped = computed(() => {
  const v = Number.isFinite(props.value) ? props.value : 0;
  return Math.min(100, Math.max(0, Math.round(v)));
});
</script>

<style scoped>
.pill {
  width: 740px;
  display: grid;
  grid-template-columns: 1fr;
  gap: 10px;
}

.label {
  font-size: 20px;
  color: rgba(255,255,255,0.68);
  font-weight: 600;
}

.track {
  height: 22px;
  border-radius: 999px;
  background: rgba(255,255,255,0.10);
  overflow: hidden;
  border: 1px solid rgba(255,255,255,0.10);
}

.fill {
  height: 100%;
  border-radius: 999px;
  background: rgba(255,255,255,0.42);
}

.pct {
  font-size: 20px;
  color: rgba(255,255,255,0.76);
  font-weight: 650;
}
</style>
